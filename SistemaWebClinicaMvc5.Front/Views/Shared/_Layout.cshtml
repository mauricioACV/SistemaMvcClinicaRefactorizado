<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Web Clínica - @ViewBag.Title</title>

    <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />

    <!-- Ionicons -->
    <link href="~/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/AdminLTE.css" rel="stylesheet" type="text/css" />
    <link href="~/jquery/jAlert/jquery.alerts.css" rel="stylesheet" type="text/css" />

    <!-- DataTables -->
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />*@
    <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/dataTables.jqueryui.min.css" />


</head>
<body class="skin-blue">
    <header class="header">
        <!-- INICIO CABECERA -->
        <a href="#" class="logo"><i class="fa fa-chevron-circle-right fa-lg" aria-hidden="true"></i><span style="font:larger">S.W.C</span></a>
        <nav class="navbar navbar-static-top" role="navigation">
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle Navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu no-cursor">
                        <a href="~/CerrarSesion/LogOff">
                            <i class="glyphicon glyphicon-user"></i>
                            <span id="">Cerrar Sesión</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- FIN CABECERA -->
    </header>
    <form id="form1">
        <div class="wrapper row-offcanvas row-offcanvas-left">
            <aside class="left-side sidebar-offcanvas">
                <section class="sidebar">
                    <div class="user-panel">
                        <div class="pull-left info">
                            <p>Bienvenido Sr(a). Mauricio C.</p>
                        </div>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="active">
                            <a href="#">
                                <i class="fa fa-dashboard"></i>
                                <span>Panel General</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/GestionarPaciente/Index">
                                <i class="fa fa-th"></i>
                                <span>Registro de Paciente</span>
                            </a>
                        </li>
                        <li>
                            <a href="~/GestionarPaciente/ListarPacienteIndex">
                                <i class="fa fa-th"></i>
                                <span>Listado Pacientes</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-th"></i>
                                <span>Reserva de Citas</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fa fa-th"></i>
                                <span>Atención de Citas</span>
                            </a>
                        </li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-th"></i>
                                <span>Horarios</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                <li>
                                    <a href="#"><i class="fa fa-angle-double-right"></i>Horarios Médicos</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </section>
            </aside>
            <aside class="right-side">
                <section class="content-header">
                    <h1>
                        @ViewBag.Title
                    </h1>
                </section>
                <section class="content">

                    <div>
                        @RenderBody()
                    </div>



                </section>
            </aside>
        </div>
    </form>

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/jquery/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/js/AdminLTE/app.js" type="text/javascript"></script>

    <script src="~/jquery/jAlert/jquery.alerts.js" type="text/javascript"></script>
    <script src="~/jquery/jquery.ui.draggable.js" type="text/javascript"></script>

    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript" charset="utf-8" src="https://cdn.datatables.net/1.10.15/js/dataTables.jqueryui.min.js"></script>

    @RenderSection("scripts", required: false)

    <div class="footer">
        <footer>
            <p> &copy; @DateTime.Now.Year - Sistema Web Clínica</p>
        </footer>
    </div>
</body>
</html>
